//Imports
@import url(https://fonts.googleapis.com/css?family=Montserrat:200);
//Vars breackpoints
desktop= 700px
//estilização
*
  box-sizing border-boz
  font-family 'Montserrat', Arial, sans-serif
  font-size 100%
  line-height 1.5
  margin 0
  padding 0
  &:root
    background-color #2196f3
  .container
    margin 1rem auto
    .ListaCidades
      display flex
      flex-direction column
      justify-content center
      &::after
        content ""
        clear both
        display table
      .card
        background-color #fff
        box-shadow 1px 3px 6px 0 rgba(0, 0, 0, 0.13)
        border-radius 8px
        margin 0 5px
        min-height 30vh
        h2
          font-size 1.2rem
          font-weight bold
        h3
          font-size 1rem
        p
          font-size .98rem
        .CardHeader
          .ContainerPerfil
            position relative
            .Perfil
              height 30vh
              width 100%
              z-index -1
          color #fff
          .Overlay
            background-color rgba(28, 36, 70, 0.44)
            min-height 30vh
            position absolute
            top 0
            width 100%
            .ContainerHeader
              padding 2rem 1.2rem
      @media(min-width: desktop)
        flex-direction row
        .card
          width 33.33%
    